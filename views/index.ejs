<% include header %>
    <!--เรียกใช้ค่าตัวแปรให้ใส่เท่ากับด้วย-->
    <div class="container-fluid" style="min-height: 100%; background: linear-gradient(-90deg,#CCCFF1,#FFCC99);">
        <div class="row">
            <div class="col-md-4" ><center>
                <h2>Add New Customers:</h2>
                <form method="POST" action="/user">
                    <label>Full Name :</label><br>
                    <input type="text" name="name">
                    <br>
                    <label>Age :</label><br>
                    <input type="number" name="age">
                    <br>
                    <label>Email :</label><br>
                    <input type="text" name="email">
                    <br><br>
                    
                    <input type="submit" class="btn btn-default" value="Add">
                    </center>
                </form>
            </div>
            <div class="col-md-6">
                <h2>
                    <%= title %>
                </h2>
                <ul>
                    <!--เขียนลูปครอบ-->
                    <ul>
                        <% users.forEach( function(user) { %>
                            <li>
                                <b><%= user.name %> </b>(
                                    <%= user.age %>) -
                                        <%=user.email%>
                            </li>
                            <% }) %>
                    </ul>
                </ul>
            </div>
        </div>
    </div>
            <% include footer %>